{
  "name": "koded/logging",
  "description": "A simple standalone logging facility with several log processors",
  "type": "library",
  "license": "BSD-3-Clause",
  "homepage": "https://github.com/kodedphp/logging",
  "keywords": [
    "logging",
    "log",
    "logger",
    "logging-library",
    "psr-3"
  ],
  "authors": [
    {
      "name": "Mihail Binev",
      "homepage": "https://kodeart.com"
    }
  ],
  "prefer-stable": true,
  "minimum-stability": "dev",
  "require": {
    "psr/log": "^3",
    "koded/stdlib": "^6.1.0"
  },
  "autoload": {
    "psr-4": {
      "Koded\\Logging\\": ""
    },
    "exclude-from-classmap": [
      "Tests/"
    ]
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "mikey179/vfsstream": "^1",
    "phpbench/phpbench": "@dev"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Koded\\Logging\\": "Tests/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "3.x-dev"
    }
  }
}