{
  "name": "koded/logging",
  "description": "A simple standalone logging facility with several log processors",
  "type": "library",
  "license": "BSD-3-Clause",
  "homepage": "https://github.com/kodedphp/logging",
  "keywords": [
    "logging",
    "log",
    "logger",
    "logging-library",
    "psr-3"
  ],
  "authors": [
    {
      "name": "Mihail Binev",
      "homepage": "https://kodeart.com"
    }
  ],
  "prefer-stable": true,
  "require": {
    "php": "^7.2",
    "psr/log": "~1",
    "koded/stdlib": "~4|5.*"
  },
  "autoload": {
    "psr-4": {
      "Koded\\Logging\\": ""
    },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  },
  "require-dev": {
    "phpunit/phpunit": "^7",
    "mikey179/vfsstream": "~1",
    "phpbench/phpbench": "@dev"
  },
  "autoload-dev": {
    "psr-4": {
      "Koded\\Logging\\": "Tests/"
    }
  }
}